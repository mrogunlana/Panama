<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  autoReload="true"
      internalLogLevel="Info"
      internalLogFile="internal.log">

  <variable name="appName" value="Panama.tests" />

  <extensions>
    <add assembly="NLog.Extensions.Logging"/>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <targets>

    <target xsi:type="Console"
        name="console"
        layout="${hostname}:${longdate}:: ${logger} - ${message}"/>

	  <target name="database" xsi:type="Database">
		  <connectionString>${environment:LOGDB_CONNECTION_STRING}</connectionString>
		  <dbProvider>System.Data.SqlClient.SqlConnection, System.Data.SqlClient</dbProvider>
		  <commandText>
			  insert into Log (
			  CorrelationId, MachineName, Logged, Level, Message,
			  Logger, CallSite, Exception
			  ) values (
			  @correlationId, @MachineName, @Logged, @Level, @Message,
			  @Logger, @Callsite, @Exception
			  );
		  </commandText>
		  <parameter name="@correlationId" layout="${mdlc:item=correlationId}" />
		  <parameter name="@machineName" layout="${machinename}" />
		  <parameter name="@logged" layout="${date}" />
		  <parameter name="@level" layout="${level}" />
		  <parameter name="@message" layout="${message}" />
		  <parameter name="@logger" layout="${logger}" />
		  <parameter name="@callSite" layout="${callsite:filename=true}" />
		  <parameter name="@exception" layout="${exception:tostring}" />
	  </target>
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="console" />
    <logger name="*" minlevel="Trace" writeTo="database" />
  </rules>
</nlog>
